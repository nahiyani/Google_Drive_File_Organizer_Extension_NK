{
  "manifest_version": 3,
  "name": "Google Drive File Organizer",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "icons": {
    "32": "gdfo_nk_32.png",
    "128": "gdfo_nk_128.png"
  },
  "content_scripts": [
    {
      "js": ["src/content.jsx"],
      "matches": ["https://www.google.com/*"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": []
    }
  ]
}
